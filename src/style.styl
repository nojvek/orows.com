// Theme Colors
$fg_color = #555
$bg_color = #f9f9f9
$a_color = #333
$a_hover_color = #006bad

body
  background-color $bg_color
  color $fg_color
  margin 5em 0
  font-size 1em
  font-family "Helvetica Neue", "Open Sans", sans-serif

h1
  font-size 1.7em
  font-weight 300
  letter-spacing 0.42em
  text-transform uppercase

p
  font-size 1.2em
  font-weight 300
  line-height 1.8em
  letter-spacing 0.02em

a
  color $a_color
  text-decoration none

  &:visited
    color $a_color

.profile
  text-align center
  animation fadeInUp 1.5s ease-in-out

  .name
    padding-left 0.3em

  a
    font-size 1em
    border 0
    border-radius 50%
    width 2em
    height 2em
    line-height 2em
    margin-bottom 2.5em

    &:hover
      background-color #ffffff
      color $a_hover_color

  .photo
    background url('profile.jpg')
    background-repeat no-repeat
    background-size 100%
    height 7.5em
    width 7.5em
    border-radius 50%
    margin 0 auto

.about-me
  animation fadeInUp 1.5s 0.5s ease-in-out both

  a
    border-bottom dotted 1px

    &:hover
      border-bottom solid 1px
      color $a_hover_color

// Responsiveness
.profile, .about-me
  max-width 35em
  padding 0 2.5em
  margin 0 auto

.social
  padding 0.2em 0

  & > li
    display inline-block
    width 2.2em

    &:nth-child(1)
      animation fadeInUp 1s 0.5s ease-in-out both
    &:nth-child(2)
      animation fadeInUp 1s 0.8s ease-in-out both
    &:nth-child(3)
      animation fadeInUp 1s 1.1s ease-in-out both
    &:nth-child(4)
      animation fadeInUp 1s 1.4s ease-in-out both
    &:nth-child(5)
      animation fadeInUp 1s 1.7s ease-in-out both


@keyframes fadeInUp
  0%
    opacity 0
    transform translate3d(0,0.5em,0)
  100%
    opacity 1
    transform translate3d(0,0,0)

